%p#notice= notice
%h1 Listing Suites
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @suites.each do |suite|
      %tr
        %td= suite.name
        %td= link_to 'Show', suite
        %td= link_to 'Edit', edit_suite_path(suite)
        %td= link_to 'Destroy', suite, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Suite', new_suite_path
