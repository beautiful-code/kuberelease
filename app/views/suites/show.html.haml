%p#notice= notice

%div
  %strong Name:
  = @suite.name

%div
  %strong Services:
  %table
    %thead
      %tr
        %th Name
        %th Docker repo
        %th Git repo
        %th K8s service
        %th{:colspan => "3"}
    %tbody
      - @suite.services.each do |service|
        %tr
          %td= service.name
          %td= service.docker_repo
          %td= service.git_repo
          %td= service.k8s_service
          %td= link_to 'Show', suite_service_path(@suite, service)
  = link_to 'Create new Service', new_suite_service_path(@suite)

%div
  %strong Environments:
  %table
    %thead
      %tr
        %th Name
        %th K8s master
        %th K8s username
        %th K8s password
        %th{:colspan => "3"}
    %tbody
      - @suite.environments.each do |env|
        %tr
          %td= env.name
          %td= env.k8s_master
          %td= env.k8s_username
          %td= env.k8s_password
          %td= link_to 'Show', suite_environment_path(@suite, env)
  = link_to 'Create new Environment', new_suite_environment_path(@suite)

%br
%br
%br


= link_to 'Edit', edit_suite_path(@suite)
